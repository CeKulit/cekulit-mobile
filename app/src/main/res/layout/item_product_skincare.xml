<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    android:elevation="8dp"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_photo_skincare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/moisturizer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_brand_skincare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_brand_skincare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glad2glow"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_photo_skincare"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tv_name_skincare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightening Moisturizer"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_brand_skincare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>
