<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema aplikasi utama -->
    <style name="Theme.CeKulit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Tema khusus untuk Splash Screen -->
    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/pink_splash</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/cekulit_logo_rounded</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.CeKulit</item>
    </style>
</resources>
